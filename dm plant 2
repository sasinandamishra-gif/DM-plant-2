<div class="card">
<h2>DM Chemical Calculator</h2>

<input type="number" id="flow" placeholder="Flow (L/hr)">
<input type="number" id="time" placeholder="Time (hr)">
<input type="number" id="dose" placeholder="Dose (%)">

<button onclick="calc()">Calculate</button>

<div class="result" id="result"></div>
</div>

<script>
function calc(){
let f=parseFloat(document.getElementById("flow").value);
let t=parseFloat(document.getElementById("time").value);
let d=parseFloat(document.getElementById("dose").value);

if(isNaN(f)||isNaN(t)||isNaN(d)){
document.getElementById("result").innerHTML="âš  Enter all values properly";
return;
}

let total=(f*t*d)/100;

document.getElementById("result").innerHTML=
"Total Chemical Used: "+total.toFixed(2)+" Liters";
}
</script>

